    <!-- CSS del Layout -->
    <style>
        /* Reset y configuración base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            overflow-x: hidden; /* Prevenir scroll horizontal */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            padding-top: 60px; /* Espacio para barra superior */
            padding-bottom: 80px; /* Espacio para navegación inferior */
            overflow-x: hidden; /* Prevenir scroll horizontal */
            min-height: 100vh;
        }

        /* Barra superior fija */
        .top-bar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 60px;
            background: linear-gradient(135deg, #000000, #2c2c2c);
            color: white;
            display: flex;
            align-items: center;
            padding: 0 15px;
            z-index: 1000;
            box-shadow: 0 2px 15px rgba(0,0,0,0.2);
        }

        /* Botón hamburguesa */
        .hamburger-btn {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            padding: 8px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            min-width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .hamburger-btn:hover {
                background-color: rgba(255,255,255,0.1);
            }

        /* Título de la aplicación */
        .app-title {
            margin-left: 15px;
            font-size: 18px;
            font-weight: 300;
            letter-spacing: 0.5px;
            font-family: 'Segoe UI', sans-serif;
        }

        .app-subtitle {
            font-size: 12px;
            opacity: 0.8;
            font-style: italic;
            margin-left: 5px;
        }

        /* Overlay para cerrar menú lateral */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.6);
            z-index: 1001;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .sidebar-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        /* Menú lateral */
        .sidebar {
            position: fixed;
            top: 0;
            left: -280px;
            width: 280px;
            height: 100vh;
            background-color: white;
            z-index: 1002;
            transition: left 0.3s ease;
            box-shadow: 2px 0 15px rgba(0,0,0,0.15);
            overflow-y: auto;
            overflow-x: hidden;
        }

            .sidebar.active {
                left: 0;
            }

        /* Header del menú lateral */
        .sidebar-header {
            background: linear-gradient(135deg, #000000, #2c2c2c);
            color: white;
            padding: 25px 20px;
            text-align: center;
        }

            .sidebar-header h3 {
                margin-bottom: 8px;
                font-size: 18px;
                font-weight: 300;
                letter-spacing: 0.5px;
            }

            .sidebar-header p {
                font-size: 13px;
                opacity: 0.9;
                font-style: italic;
            }

        /* Lista de opciones del menú lateral */
        .sidebar-menu {
            list-style: none;
            padding: 20px 0;
        }

            .sidebar-menu li {
                border-bottom: 1px solid #f0f0f0;
            }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                padding: 16px 20px;
                color: #333;
                text-decoration: none;
                transition: all 0.3s ease;
                font-weight: 400;
            }

                .sidebar-menu a:hover {
                    background-color: #f8f9fa;
                    color: #000;
                    padding-left: 25px;
                }

            .sidebar-menu .icon {
                margin-right: 15px;
                font-size: 18px;
                width: 20px;
                text-align: center;
            }

        /* Navegación inferior fija */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 80px;
            background-color: white;
            border-top: 2px solid #000000;
            display: flex;
            z-index: 999;
            box-shadow: 0 -2px 15px rgba(0,0,0,0.1);
        }

        /* Botones de navegación inferior */
        .nav-item {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: #666;
            transition: all 0.3s ease;
            padding: 8px 4px;
            position: relative;
        }

            .nav-item:hover,
            .nav-item.active {
                color: #000000;
                background-color: #f8f9fa;
            }

                .nav-item.active::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    height: 3px;
                    background-color: #000000;
                }

            .nav-item .icon {
                font-size: 24px;
                margin-bottom: 4px;
            }

            .nav-item .label {
                font-size: 12px;
                font-weight: 500;
            }

        /* Área de contenido principal */
        .main-content {
            padding: 20px 15px;
            min-height: calc(100vh - 140px);
            max-width: 100%;
            overflow-x: hidden;
        }

        /* Contenedor para evitar overflow en desktop */
        .content-wrapper {
            width: 100%;
            max-width: 100%;
            overflow: hidden;
        }

        /* Responsive para tablets y desktop */
        @@media (min-width: 768px) {
            html, body {
                overflow-x: hidden; /* Asegurar que no hay scroll horizontal */
            }

            body {
                padding-top: 70px;
                padding-bottom: 90px;
            }

            .top-bar {
                height: 70px;
                padding: 0 30px;
            }

            .app-title {
                font-size: 22px;
            }

            .app-subtitle {
                font-size: 14px;
            }

            .bottom-nav {
                height: 90px;
            }

            .nav-item .icon {
                font-size: 28px;
                margin-bottom: 6px;
            }

            .nav-item .label {
                font-size: 14px;
            }

            .main-content {
                padding: 30px;
                max-width: 1200px;
                margin: 0 auto;
                width: calc(100% - 60px); /* Evitar que toque los bordes */
            }
            /* Asegurar que el contenido no cause overflow */
            .content-wrapper {
                max-width: 100%;
                width: 100%;
            }
        }

        /* Estilos adicionales para prevenir scrollbars innecesarias */
        @@media (min-width: 1024px) {
            body {
                overflow-y: auto;
                overflow-x: hidden;
            }

            .main-content {
                width: calc(100% - 40px);
                max-width: 1200px;
            }
        }

        /* Animaciones */
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Estilos para scrollbar personalizada (solo webkit) */
