                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Crear Cuenta -->
    <div class="modal fade" id="crearCuentaModal" tabindex="-1" aria-labelledby="crearCuentaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearCuentaModalLabel"><i class="bi bi-plus-circle me-2"></i>Crear Cuenta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="newNombre" class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control" id="newNombre" placeholder="Ingrese el nombre completo">
                        </div>
                        <div class="mb-3">
                            <label for="newDni" class="form-label">DNI</label>
                            <input type="text" class="form-control" id="newDni" placeholder="Ingrese el DNI">
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="newPassword" placeholder="Cree una contraseña">
                                <button class="btn btn-outline-secondary" type="button" id="showNewPasswordBtn">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="newEstado" class="form-label">Estado</label>
                            <select class="form-select" id="newEstado">
                                <option value="active" selected>Activo</option>
                                <option value="inactive">Inactivo</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="newRol" class="form-label">Rol</label>
                            <select class="form-select" id="newRol">
                                <option value="admin">Administrador</option>
                                <option value="manager">Encargado</option>
                                <option value="employee" selected>Empleado</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="newNumero" class="form-label">Número</label>
                            <input type="text" class="form-control" id="newNumero" placeholder="Ingrese el número de contacto">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mostrar/ocultar contraseña
        document.getElementById('showPasswordBtn').addEventListener('click', function() {
            const passwordInput = document.getElementById('editPassword');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                passwordInput.type = 'password';
                this.innerHTML = '<i class="bi bi-eye"></i>';
            }
        });

        document.getElementById('showNewPasswordBtn').addEventListener('click', function() {
            const passwordInput = document.getElementById('newPassword');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                passwordInput.type = 'password';
                this.innerHTML = '<i class="bi bi-eye"></i>';
            }
        });
    </script>
