@{
    ViewBag.Title = "Listar";
}

<h2 class="text-center mb-4">👥 Listar Empleados</h2>

<div class="text-end mb-3">
    <a class="btn btn-success btn-lg px-4" href="~/GestionEmpleados/Crear">
        ➕ Crear nuevo Usuario
    </a>
</div>

<div class="contenedor-empleados">
    @foreach (var empleado in Model)
    {
        <div class="bloque-empleado">
            <h3 class="mb-2 text-uppercase fw-bold">@empleado.nombre @empleado.apellido</h3>
            <p class="mb-1"><strong>Email:</strong> @empleado.correoElectronico</p>
            <p class="mb-3"><strong>DNI:</strong> @empleado.dni</p>
            <div class="acciones">
                <a href="@Url.Action("Ver", "GestionEmpleados", new { idUsuario = empleado.idUsuario })"
                   class="btn btn-primary btn-lg w-100 mb-2">👁 Historial</a>
                <a href="@Url.Action("Editar", "GestionEmpleados", new { idUsuario = empleado.idUsuario })"
                   class="btn btn-secondary btn-lg w-100">✏️ Editar Cuenta</a>
            </div>
        </div>
    }
</div>

<style>
    .contenedor-empleados {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 15px;
    }

    .bloque-empleado {
        background-color: #ffffff;
        padding: 20px;
        border: 2px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease;
        text-align: center;
    }

    .bloque-empleado:hover {
        transform: translateY(-4px);
    }

    .acciones .btn {
        font-weight: 600;
        letter-spacing: 0.5px;
    }

</style>
