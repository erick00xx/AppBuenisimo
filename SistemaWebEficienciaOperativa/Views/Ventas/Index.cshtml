
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Ventas</title>
    <!-- Bootstrap CSS -->
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .table-responsive {
            max-height: 70vh;
            overflow-y: auto;
        }

        .table thead th {
            position: sticky;
            top: 0;
            background-color: #f8f9fa;
            z-index: 10;
        }

        .sale-detail-card {
            border-left: 4px solid #0d6efd;
        }

        .product-item {
            border-bottom: 1px solid #eee;
            padding: 10px 0;
        }

        .total-display {
            font-size: 1.2rem;
            font-weight: bold;
            color: #0d6efd;
        }

        .action-buttons a {
            margin: 0 3px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Ventas realizadas</h1>
            <div>
                <button class="btn btn-outline-secondary me-2">
                    <i class="bi bi-filter me-1"></i>Filtrar
                </button>
            </div>
        </div>

        <!-- Tabla de ventas -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Hora</th>
                                <th>Vendedor</th>
                                <th>Mesa</th>
                                <th>Sucursal</th>
                                <th class="text-end">Total</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2024-04-08</td>
                                <td>03:00</td>
                                <td>Carla Gómez</td>
                                <td>5</td>
                                <td>1</td>
                                <td class="text-end">$5.70</td>
                                <td class="action-buttons">
                                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#detalleVentaModal" title="Ver"><i class="bi bi-eye-fill"></i></a>
                                    <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarVentaModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2024-04-09</td>
                                <td>10:00</td>
                                <td>Diego Torres</td>
                                <td>2</td>
                                <td>2</td>
                                <td class="text-end">$9.80</td>
                                <td class="action-buttons">
                                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#detalleVentaModal" title="Ver"><i class="bi bi-eye-fill"></i></a>
                                    <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarVentaModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2024-04-10</td>
                                <td>10:45</td>
                                <td>Laura Ríos</td>
                                <td>1</td>
                                <td>1</td>
                                <td class="text-end">$4.50</td>
                                <td class="action-buttons">
                                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#detalleVentaModal" title="Ver"><i class="bi bi-eye-fill"></i></a>
                                    <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarVentaModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2024-04-11</td>
                                <td>11:20</td>
                                <td>Martín Pérez</td>
                                <td>3</td>
                                <td>1</td>
                                <td class="text-end">$7.70</td>
                                <td class="action-buttons">
                                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#detalleVentaModal" title="Ver"><i class="bi bi-eye-fill"></i></a>
                                    <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarVentaModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2024-04-12</td>
                                <td>12:00</td>
                                <td>Carla Gómez</td>
                                <td>4</td>
                                <td>1</td>
                                <td class="text-end">$5.30</td>
                                <td class="action-buttons">
                                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#detalleVentaModal" title="Ver"><i class="bi bi-eye-fill"></i></a>
                                    <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarVentaModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Detalle de Venta -->
    <div class="modal fade" id="detalleVentaModal" tabindex="-1" aria-labelledby="detalleVentaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detalleVentaModalLabel">Detalle de Venta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card sale-detail-card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Realizó la venta:</strong><br>Juan Carlos Flores</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Fecha y Hora:</strong><br>11:45 a.m. 17/04/2025</p>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <p><strong>Sucursal:</strong> 1</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Nro Mesa:</strong> 3</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mb-3">Productos</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Detalle</th>
                                    <th>Cantidad</th>
                                    <th class="text-end">Precio unitario</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Latte</td>
                                    <td>Grande</td>
                                    <td>1</td>
                                    <td class="text-end">$3.50</td>
                                    <td class="text-end">$3.50</td>
                                </tr>
                                <tr>
                                    <td>Croissant</td>
                                    <td>Unidad</td>
                                    <td>1</td>
                                    <td class="text-end">$2.20</td>
                                    <td class="text-end">$2.20</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="text-end mt-3">
                        <div class="total-display">Total: S/. 10.00</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Editar Venta -->
    <div class="modal fade" id="editarVentaModal" tabindex="-1" aria-labelledby="editarVentaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarVentaModalLabel">Editar Venta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <label class="form-label"><strong>Realizó la venta:</strong></label>
                        <p>Juan Carlos Flores</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="editFechaHora" class="form-label"><strong>Fecha y Hora:</strong></label>
                            <div class="input-group">
                                <input type="datetime-local" class="form-control" id="editFechaHora" value="2025-04-17T11:45">
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="editSucursal" class="form-label"><strong>Sucursal:</strong></label>
                            <select class="form-select" id="editSucursal">
                                <option value="1" selected>1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="editMesa" class="form-label"><strong>Nro Mesa:</strong></label>
                            <input type="number" class="form-control" id="editMesa" value="3">
                        </div>
                    </div>

                    <h5 class="mb-3">Productos</h5>
                    <div class="table-responsive mb-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Detalle</th>
                                    <th>Cantidad</th>
                                    <th class="text-end">Precio unitario</th>
                                    <th class="text-end">Subtotal</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Latte</td>
                                    <td>Grande</td>
                                    <td><input type="number" class="form-control form-control-sm" value="1" min="1" style="width: 60px;"></td>
                                    <td class="text-end">$3.50</td>
                                    <td class="text-end">$3.50</td>
                                    <td>
                                        <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarDetalleModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                        <a href="#" class="text-danger" title="Quitar"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Croissant</td>
                                    <td>Unidad</td>
                                    <td><input type="number" class="form-control form-control-sm" value="1" min="1" style="width: 60px;"></td>
                                    <td class="text-end">$2.20</td>
                                    <td class="text-end">$2.20</td>
                                    <td>
                                        <a href="#" class="text-success" data-bs-toggle="modal" data-bs-target="#editarDetalleModal" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                        <a href="#" class="text-danger" title="Quitar"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-plus me-1"></i>Agregar Producto
                        </button>
                        <div class="total-display">Total: S/. 10.00</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Editar Detalle de Producto -->
    <div class="modal fade" id="editarDetalleModal" tabindex="-1" aria-labelledby="editarDetalleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarDetalleModalLabel">Editar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="editProducto" class="form-label">Producto</label>
                            <select class="form-select" id="editProducto">
                                <option value="latte" selected>Latte</option>
                                <option value="croissant">Croissant</option>
                                <option value="espresso">Espresso</option>
                                <option value="te">Té</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="editDetalle" class="form-label">Detalle</label>
                            <select class="form-select" id="editDetalle">
                                <option value="grande" selected>Grande</option>
                                <option value="mediano">Mediano</option>
                                <option value="pequeno">Pequeño</option>
                                <option value="unidad">Unidad</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="editCantidad" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="editCantidad" value="2" min="1">
                        </div>
                        <div class="mb-3">
                            <label for="editPrecio" class="form-label">Precio Unitario</label>
                            <input type="number" step="0.01" class="form-control" id="editPrecio" value="5.00">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subtotal</label>
                            <p class="form-control-plaintext">S/. 10.00</p>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Actualizar subtotal cuando cambia cantidad o precio
        document.getElementById('editCantidad').addEventListener('change', updateSubtotal);
        document.getElementById('editPrecio').addEventListener('change', updateSubtotal);

        function updateSubtotal() {
            const cantidad = parseFloat(document.getElementById('editCantidad').value) || 0;
            const precio = parseFloat(document.getElementById('editPrecio').value) || 0;
            const subtotal = cantidad * precio;
            document.querySelector('#editarDetalleModal .form-control-plaintext').textContent = 'S/. ' + subtotal.toFixed(2);
        }
    </script>
</body>
</html>

