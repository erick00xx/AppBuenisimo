@{
    ViewBag.Title = "Gestión de Pedidos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>



    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        .mesa-libre {
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .mesa-pendiente {
            background-color: #fff3cd;
            border-color: #ffeeba;
        }

        .mesa-servido {
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .cursor-pointer {
            cursor: pointer;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-3">
        <h1 class="text-center mb-4">Pedidos en Curso: Buenísimo 1</h1>

        <div class="row g-3">
            <!-- Mesa 1 - Libre -->
            <div class="col-md-4">
                <div class="card mesa-libre border-success h-100 cursor-pointer"
                     data-bs-toggle="modal" data-bs-target="#modalDetalle" data-mesa="1" data-estado="LIBRE">
                    <div class="card-body text-center">
                        <h3 class="card-title">MESA 01</h3>
                        <p class="card-text">LIBRE</p>
                    </div>
                </div>
            </div>

            <!-- Mesa 2 - Pendiente -->
            <div class="col-md-4">
                <div class="card mesa-pendiente border-warning h-100 cursor-pointer"
                     data-bs-toggle="modal" data-bs-target="#modalDetalle" data-mesa="2" data-estado="PENDIENTE">
                    <div class="card-body text-center">
                        <h3 class="card-title">MESA 02</h3>
                        <p class="card-text">PENDIENTE</p>
                    </div>
                </div>
            </div>

            <!-- Mesa 3 - Servido -->
            <div class="col-md-4">
                <div class="card mesa-servido border-danger h-100 cursor-pointer"
                     data-bs-toggle="modal" data-bs-target="#modalDetalle" data-mesa="3" data-estado="SERVIDO">
                    <div class="card-body text-center">
                        <h3 class="card-title">MESA 03</h3>
                        <p class="card-text">SERVIDO</p>
                    </div>
                </div>
            </div>

            <!-- Mesa 4 - Pendiente -->
            <div class="col-md-4">
                <div class="card mesa-pendiente border-warning h-100 cursor-pointer"
                     data-bs-toggle="modal" data-bs-target="#modalDetalle" data-mesa="4" data-estado="PENDIENTE">
                    <div class="card-body text-center">
                        <h3 class="card-title">MESA 04</h3>
                        <p class="card-text">PENDIENTE</p>
                    </div>
                </div>
            </div>

            <!-- Botón para nuevo pedido -->
            <div class="col-md-4">
                <div class="card border-primary h-100 cursor-pointer" data-bs-toggle="modal" data-bs-target="#modalNuevoPedido">
                    <div class="card-body text-center">
                        <h3 class="card-title"><i class="bi bi-plus-lg"></i></h3>
                        <p class="card-text">@Html.ActionLink("Nuevo Pedido", "Pedidos", null, new { @class = "btn btn-secondary" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Detalle de Pedido -->
    <div class="modal fade" id="modalDetalle" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title">Detalle de Pedido - MESA <span id="mesaNumero"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        Estado actual: <strong id="estadoPedido"></strong>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th>Detalle</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unit.</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Café Espresso</td>
                                    <td>Grande</td>
                                    <td>2</td>
                                    <td>S/ 5.00</td>
                                    <td>S/ 10.00</td>
                                </tr>
                                <tr>
                                    <td>Croissant</td>
                                    <td>Unidad</td>
                                    <td>1</td>
                                    <td>S/ 2.20</td>
                                    <td>S/ 2.20</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Comentarios" id="comentarios" style="height:100px">Sin azúcar, por favor</textarea>
                                <label for="comentarios">Comentarios</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <h4 class="text-end">Total: <span class="text-primary">S/ 12.20</span></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="cancelarPedido()">
                        <i class="bi bi-x-circle"></i> Cancelar Pedido
                    </button>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalEditar">
                        <i class="bi bi-pencil"></i> Editar Pedido
                    </button>
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal" onclick="marcarComoEntregado()">
                        <i class="bi bi-check-circle"></i> Marcar como Entregado
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Editar Pedido -->
    <div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title">Editar Pedido - MESA <span id="mesaNumeroEditar"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Producto</h5>
                            <select class="form-select">
                                <option selected>Café Espresso</option>
                                <option>Croissant</option>
                                <option>Té</option>
                                <option>Jugo Natural</option>
                            </select>
                            <p class="mt-2">Precio: <strong>S/ 5.00</strong></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Tamaño/Porción</h5>
                            <select class="form-select">
                                <option selected>Grande</option>
                                <option>Mediano</option>
                                <option>Pequeño</option>
                            </select>
                            <div class="input-group mt-2">
                                <span class="input-group-text">Cantidad</span>
                                <input type="number" class="form-control" value="2" min="1">
                            </div>
                            <p class="mt-2">Subtotal: <strong>S/ 10.00</strong></p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th>Detalle</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unit.</th>
                                    <th>Subtotal</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Café Espresso</td>
                                    <td>Grande</td>
                                    <td>2</td>
                                    <td>S/ 5.00</td>
                                    <td>S/ 10.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Croissant</td>
                                    <td>Unidad</td>
                                    <td>1</td>
                                    <td>S/ 2.20</td>
                                    <td>S/ 2.20</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Comentarios</label>
                        <textarea class="form-control" style="height:100px">Sin azúcar, por favor</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="guardarCambios()">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </div>
        </div>
    </div>


    <!-- jQuery local -->
    <script src="~/source/js/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap JS local -->
    <script src="~/source/js/bootstrap.bundle.min.js"></script>

    <script>
        // Configurar el modal de detalle al mostrar
        $('#modalDetalle').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var mesa = button.data('mesa');
            var estado = button.data('estado');

            $('#mesaNumero').text(mesa);
            $('#mesaNumeroEditar').text(mesa);
            $('#estadoPedido').text(estado);
        });

        // Funciones para las acciones
        function guardarCambios() {
            alert('Cambios guardados correctamente');
        }

        function cancelarPedido() {
            if (confirm('¿Está seguro de cancelar este pedido?')) {
                alert('Pedido cancelado');
            }
        }

        function marcarComoEntregado() {
            alert('Pedido marcado como entregado');
        }
    </script>
</body>
</html>