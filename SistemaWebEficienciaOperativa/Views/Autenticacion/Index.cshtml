@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - Buenísimo</title>

    <!-- Bootstrap CSS local -->
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white">

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg rounded-4" style="width: 100%; max-width: 400px;">
            <div class="card-header bg-white text-center border-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#6c757d" class="bi bi-cup-hot" viewBox="0 0 16 16">
                    <path d="M4 1a.5.5 0 0 1 .5.5v1.227a3 3 0 0 1 2.94 2.94l1.002 1.001A.5.5 0 0 1 8.5 6h-5a.5.5 0 0 1-.5-.5v-4A.5.5 0 0 1 4 1zm2 4h-1v2.5a.5.5 0 0 1-1 0V5H3a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1h-1V2.5a.5.5 0 0 1 1 0V5h1a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2z" />
                    <path d="M2.5 14a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                </svg>
                <h3 class="mt-2 mb-0">Buenísimo</h3>
                <p class="text-muted small">Sistema de gestión</p>
            </div>

            <div class="card-body p-4">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <form method="post" action="@Url.Action("Login", "Autenticacion")">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuario" required>
                        <label for="usuario">Usuario</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña" required>
                        <label for="contrasena">Contraseña</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar sesión
                    </button>
                </form>
            </div>

            <div class="card-footer bg-white border-0 text-center small text-muted">
                &copy; 2025 Buenísimo - Todos los derechos reservados
            </div>
        </div>
    </div>

    <!-- jQuery local -->
    <script src="~/source/js/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap JS local -->
    <script src="~/source/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Validate -->
    <script src="~/source/js/jquery.validate.min.js"></script>
    <script src="~/source/js/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('form').validate({
                rules: {
                    usuario: "required",
                    contrasena: "required"
                },
                messages: {
                    usuario: "Por favor ingrese su usuario",
                    contrasena: "Por favor ingrese su contraseña"
                },
                errorElement: "div",
                errorPlacement: function (error, element) {
                    error.addClass("invalid-feedback");
                    element.after(error);
                },
                highlight: function (element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid").addClass("is-valid");
                }
            });
        });
    </script>
</body>
</html>
