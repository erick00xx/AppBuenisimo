
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Layout</title>

    <link href="~/source/css/bootstrap.css" rel="stylesheet" />
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet" />


    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/source/css/style.css">
    <link rel="stylesheet" href="~/source/css/chatbot.css">
    @*<link rel="stylesheet" href="~/source/css/menu.css">*@

    <script src="~/source/js/jquery-3.7.1.min.js"></script>

</head>
<body>
    <div class="wrapper">
        <aside id="sidebar">
            @* TITULO DE SIDEBAR *@
            <div class="d-flex">
                @* Boton de Menú *@
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                @* Nombre *@
                <div class="sidebar-logo">
                    <a href="@Url.Action("Index", "Home")">Buenísimo</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                @* Sucursal *@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-network"></i>
                        <span>Sucursales</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Sucursal A</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Sucursal B</a>
                        </li>
                    </ul>
                </li>

                @* Gestion*@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#Gestion" aria-expanded="false" aria-controls="Gestion">
                        <i class="lni lni-protection"></i>
                        <span>Gestion</span>
                    </a>
                    <ul id="Gestion" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionEmpleados")" class="sidebar-link">Cuentas</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionInventario")" class="sidebar-link">Inventario</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionCarta")" class="sidebar-link">Carta</a>
                        </li>
                    </ul>
                </li>

                @* Generar Reportes *@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#inventarioMenu" aria-expanded="false" aria-controls="inventarioMenu">
                        <i class="lni lni-protection"></i>
                        <span>Generar Reportes</span>
                    </a>
                    <ul id="inventarioMenu" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteInventario", "Reportes")" class="sidebar-link">Inventario</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteEmpleado", "Reportes")" class="sidebar-link">Empleados</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteVentas", "Reportes")" class="sidebar-link">Ventas</a>
                        </li>
                    </ul>
                </li>

                @* Pedidos *@
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Pedidos")" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Pedidos</span>
                    </a>
                </li>

                @* Pedidos Usuario *@
                <li class="sidebar-item">
                    <a href="@Url.Action("PedidoUsuario", "Pedidos")" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Pedidos Usuario</span>
                    </a>
                </li>

                @*
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                           data-bs-target="#multi" aria-expanded="false" aria-controls="multi">
                            <i class="lni lni-layout"></i>
                            <span>Multi Level</span>
                        </a>
                        <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse"
                                   data-bs-target="#multi-two" aria-expanded="false" aria-controls="multi-two">
                                    Two Links
                                </a>
                                <ul id="multi-two" class="sidebar-dropdown list-unstyled collapse">
                                    <li class="sidebar-item">
                                        <a href="#" class="sidebar-link">Link 1</a>
                                    </li>
                                    <li class="sidebar-item">
                                        <a href="#" class="sidebar-link">Link 2</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-popup"></i>
                            <span>Notification</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-cog"></i>
                            <span>Setting</span>
                        </a>
                    </li>*@
            </ul>
            <div class="sidebar-footer">
                @* Botón de Logout *@
                <a href="@Url.Action("Logout", "Autenticacion")" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            <div class="text-center container">
                <h1>
                    @* Contenido de cada Módulo *@
                    @RenderBody()
                </h1>
            </div>
        </div>
    </div>

    <div class="chat-container">
        <!-- Burbuja flotante del chat -->
        <div class="chat-bubble" id="chatBubble">
            <i class="lni lni-comments"></i>
        </div>

        <!-- Ventana del chat -->
        <div class="chat-window" id="chatWindow">
            <div class="chat-header">
                <div class="chat-title">Asistente Buenísimo</div>
                <button class="chat-close" id="chatClose">
                    <i class="lni lni-close"></i>
                </button>
            </div>
            <div class="chat-body" id="chatBody">
                <div class="chat-message bot">
                    <div class="message-content">
                        ¡Hola! Soy el asistente virtual de Buenísimo. ¿En qué puedo ayudarte hoy?
                    </div>
                    <div class="message-time">Ahora</div>
                </div>
            </div>
            <div class="chat-footer">
                <input type="text" id="chatInput" class="chat-input" placeholder="Escribe tu mensaje aquí...">
                <button class="chat-send" id="chatSend">
                    <i class="lni lni-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/source/js/script.js"></script>
    <script src="~/source/js/chatbot.js"></script>
    <script src="~/source/js/pedidos.js"></script>
    

</body>
</html>
