
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Pedidos - Café Aroma</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/source/css/pedido.css">
</head>
<body>
    <div class="container-fluid py-2">
        <!-- Header -->
        <div class="coffee-header d-flex justify-content-between align-items-center">
            <div>
                <h1>Café Aroma</h1>
                <small class="text-muted" style="font-size: 0.8rem;">Sistema de Pedidos</small>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-2" style="font-size: 0.8rem;">
                    <i class="fas fa-user me-1"></i> Carlos R.
                </span>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-bell"></i>
                        <span class="badge bg-danger">2</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-2">
            <!-- Columna Izquierda: Mesas y Pedido Actual -->
            <div class="col-md-3">
                <!-- Selección de Mesa -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-chair me-1"></i> Mesas
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap justify-content-center">
                            <div class="table-mesa available selected" data-table="1">
                                <span>M1</span>
                            </div>
                            <div class="table-mesa occupied" data-table="2">
                                <span>M2</span>
                                <span class="badge-timer">35:12</span>
                            </div>
                            <div class="table-mesa available" data-table="3">
                                <span>M3</span>
                            </div>
                            <div class="table-mesa occupied" data-table="4">
                                <span>M4</span>
                                <span class="badge-timer">12:45</span>
                            </div>
                            <div class="table-mesa available" data-table="5">
                                <span>M5</span>
                            </div>
                            <div class="table-mesa available" data-table="6">
                                <span>M6</span>
                            </div>
                            <div class="table-mesa occupied" data-table="7">
                                <span>M7</span>
                                <span class="badge-timer">05:23</span>
                            </div>
                            <div class="table-mesa available" data-table="8">
                                <span>M8</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pedido Actual -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-receipt me-1"></i> Pedido Actual - Mesa 1
                    </div>
                    <div class="card-body">
                        <div class="current-order">
                            <div class="order-item">
                                <div class="order-item-details">
                                    <div class="order-item-name">2x Espresso</div>
                                    <div class="order-item-notes">1 sin azúcar</div>
                                </div>
                                <div class="order-item-actions">
                                    <span>$50.00</span>
                                    <button class="btn btn-sm btn-link p-0 ms-2" title="Editar">
                                        <i class="fas fa-edit text-primary"></i>
                                    </button>
                                    <button class="btn btn-sm btn-link p-0 ms-1" title="Eliminar">
                                        <i class="fas fa-trash-alt text-danger"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="order-item">
                                <div class="order-item-details">
                                    <div class="order-item-name">1x Capuccino</div>
                                </div>
                                <div class="order-item-actions">
                                    <span>$45.00</span>
                                    <button class="btn btn-sm btn-link p-0 ms-2" title="Editar">
                                        <i class="fas fa-edit text-primary"></i>
                                    </button>
                                    <button class="btn btn-sm btn-link p-0 ms-1" title="Eliminar">
                                        <i class="fas fa-trash-alt text-danger"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="order-item">
                                <div class="order-item-details">
                                    <div class="order-item-name">1x Cheesecake</div>
                                    <div class="order-item-notes">Extra frutos rojos</div>
                                </div>
                                <div class="order-item-actions">
                                    <span>$65.00</span>
                                    <button class="btn btn-sm btn-link p-0 ms-2" title="Editar">
                                        <i class="fas fa-edit text-primary"></i>
                                    </button>
                                    <button class="btn btn-sm btn-link p-0 ms-1" title="Eliminar">
                                        <i class="fas fa-trash-alt text-danger"></i>
                                    </button>
                                </div>
                            </div>

                            <hr style="margin: 0.5rem 0;">

                            <div class="d-flex justify-content-between" style="font-size: 0.8rem;">
                                <span>Subtotal:</span>
                                <span>$160.00</span>
                            </div>
                            <div class="d-flex justify-content-between" style="font-size: 0.8rem;">
                                <span>IVA (16%):</span>
                                <span>$25.60</span>
                            </div>
                            <div class="order-total d-flex justify-content-between">
                                <span>Total:</span>
                                <span>$185.60</span>
                            </div>
                        </div>

                        <div class="d-grid gap-1">
                            <button class="btn btn-sm btn-primary">
                                <i class="fas fa-paper-plane me-1"></i> Enviar Pedido
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Historial de Pedidos -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-history me-1"></i> Historial - Mesa 1
                    </div>
                    <div class="card-body p-0">
                        <div class="history-items-container">
                            <div class="history-item">
                                <div class="history-item-title">
                                    <span>Pedido #1204</span>
                                    <span class="badge bg-success">Completado</span>
                                </div>
                                <div class="history-item-details">
                                    2x Americano, 1x Brownie
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="font-size: 0.75rem;">11:30 AM</span>
                                    <span style="font-weight: 600; font-size: 0.8rem;">$130.00</span>
                                </div>
                            </div>
                            <div class="history-item">
                                <div class="history-item-title">
                                    <span>Pedido #1198</span>
                                    <span class="badge bg-success">Completado</span>
                                </div>
                                <div class="history-item-details">
                                    1x Capuccino
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="font-size: 0.75rem;">10:45 AM</span>
                                    <span style="font-weight: 600; font-size: 0.8rem;">$45.00</span>
                                </div>
                            </div>
                            <div class="history-item">
                                <div class="history-item-title">
                                    <span>Pedido #1185</span>
                                    <span class="badge bg-secondary">Cancelado</span>
                                </div>
                                <div class="history-item-details">
                                    1x Latte, 1x Cheesecake
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="font-size: 0.75rem;">10:15 AM</span>
                                    <span style="font-weight: 600; font-size: 0.8rem;">$113.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna Central: Menú de Pedidos -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-utensils me-1"></i> Menú
                    </div>
                    <div class="card-body">
                        <div class="search-bar">
                            <input type="text" class="form-control form-control-sm" placeholder="Buscar en el menú...">
                            <span class="search-icon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>

                        <!-- Categoría: Café -->
                        <div class="menu-category">
                            <div class="menu-category-title">
                                <i class="fas fa-coffee me-1"></i> Café
                            </div>

                            <div class="menu-items-container">
                                <div class="menu-item">
                                    <div class="menu-item-title">Espresso <span class="menu-item-price">$25.00</span></div>
                                    <div class="menu-item-description">Café concentrado servido en shot</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Americano <span class="menu-item-price">$35.00</span></div>
                                    <div class="menu-item-description">Espresso con agua caliente</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Capuccino <span class="menu-item-price">$45.00</span></div>
                                    <div class="menu-item-description">Espresso con leche espumada</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Latte <span class="menu-item-price">$48.00</span></div>
                                    <div class="menu-item-description">Espresso con leche al vapor</div>
                                </div>
                            </div>
                        </div>

                        <!-- Categoría: Postres -->
                        <div class="menu-category">
                            <div class="menu-category-title">
                                <i class="fas fa-cookie me-1"></i> Postres
                            </div>

                            <div class="menu-items-container">
                                <div class="menu-item">
                                    <div class="menu-item-title">Cheesecake <span class="menu-item-price">$65.00</span></div>
                                    <div class="menu-item-description">Tarta de queso con frutos rojos</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Tiramisú <span class="menu-item-price">$70.00</span></div>
                                    <div class="menu-item-description">Postre italiano con café y mascarpone</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Brownie <span class="menu-item-price">$55.00</span></div>
                                    <div class="menu-item-description">Con helado de vainilla</div>
                                </div>
                            </div>
                        </div>

                        <!-- Categoría: Bebidas -->
                        <div class="menu-category">
                            <div class="menu-category-title">
                                <i class="fas fa-glass-whiskey me-1"></i> Bebidas
                            </div>

                            <div class="menu-items-container">
                                <div class="menu-item">
                                    <div class="menu-item-title">Limonada <span class="menu-item-price">$40.00</span></div>
                                    <div class="menu-item-description">Natural o mineral</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Té Chai <span class="menu-item-price">$42.00</span></div>
                                    <div class="menu-item-description">Con leche y especias</div>
                                </div>

                                <div class="menu-item">
                                    <div class="menu-item-title">Chocolate Caliente <span class="menu-item-price">$38.00</span></div>
                                    <div class="menu-item-description">Con crema batida</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna Derecha: Pedidos Activos -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#active-orders-tab">Pedidos Activos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#completed-orders-tab">Completados</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body p-0">
                        <div class="tab-content">
                            <!-- Tab de Pedidos Activos -->
                            <div class="tab-pane fade show active" id="active-orders-tab">
                                <div class="table-responsive">
                                    <table class="table table-sm m-0">
                                        <thead>
                                            <tr>
                                                <th>Mesa</th>
                                                <th>Hora</th>
                                                <th>Items</th>
                                                <th>Total</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>M2</td>
                                                <td>10:15</td>
                                                <td>4 items</td>
                                                <td>$245.00</td>
                                                <td><span class="badge bg-info">En preparación</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-success" title="Cobrar">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>M4</td>
                                                <td>10:30</td>
                                                <td>3 items</td>
                                                <td>$190.00</td>
                                                <td><span class="badge bg-warning text-dark">Servido</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-success" title="Cobrar">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>M7</td>
                                                <td>10:52</td>
                                                <td>2 items</td>
                                                <td>$110.00</td>
                                                <td><span class="badge bg-primary">Solicitado</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" title="Cancelar">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Detalle del Pedido Seleccionado -->
                                <div class="p-2 border-top">
                                    <div class="fw-bold mb-2" style="font-size: 0.9rem;">Detalle del Pedido - Mesa 2</div>

                                    <div class="current-order">
                                        <div class="order-item">
                                            <div class="order-item-details">
                                                <div class="order-item-name">2x Latte</div>
                                                <div class="order-item-notes">Descafeinado</div>
                                            </div>
                                            <div class="order-item-actions">
                                                <span>$96.00</span>
                                            </div>
                                        </div>
                                        <div class="order-item">
                                            <div class="order-item-details">
                                                <div class="order-item-name">1x Tiramisú</div>
                                            </div>
                                            <div class="order-item-actions">
                                                <span>$70.00</span>
                                            </div>
                                        </div>
                                        <div class="order-item">
                                            <div class="order-item-details">
                                                <div class="order-item-name">1x Chocolate Caliente</div>
                                            </div>
                                            <div class="order-item-actions">
                                                <span>$38.00</span>
                                            </div>
                                        </div>
                                        <div class="order-item">
                                            <div class="order-item-details">
                                                <div class="order-item-name">1x Brownie</div>
                                                <div class="order-item-notes">Sin helado</div>
                                            </div>
                                            <div class="order-item-actions">
                                                <span>$55.00</span>
                                            </div>
                                        </div>

                                        <hr style="margin: 0.5rem 0;">

                                        <div class="d-flex justify-content-between" style="font-size: 0.8rem;">
                                            <span>Total:</span>
                                            <span style="font-weight: 600;">$259.00</span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end mt-2 gap-1">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit me-1"></i> Editar
                                        </button>
                                        <button class="btn btn-sm btn-success">
                                            <i class="fas fa-check me-1"></i> Marcar Listo
                                        </button>
                                    </div>
                                </div>
                            </div>

                      

