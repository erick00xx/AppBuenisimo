@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Layout</title>

    <link href="~/source/css/bootstrap.css" rel="stylesheet" />
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet" />


    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/source/css/style.css">
    <link rel="stylesheet" href="~/source/css/pedidos.css">

    <script src="~/source/js/jquery-3.7.1.min.js"></script>
    <style>
        /* Custom styles for overlay sidebar */
        #sidebar {
            width: 0;
            min-width: 0;
            overflow: hidden;
            z-index: 1100;
            transition: all .25s ease-in-out;
            background: radial-gradient(circle at 20% 0%, #110f10, #120e10, #140d0f, #150c0d, #160b0b, #180a08, #180905, #190801);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
        }

            #sidebar.expand {
                width: 260px;
                min-width: 260px;
            }

        /* Hamburger button styles */
        .hamburger-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1200;
            background-color: transparent;
            cursor: pointer;
            border: 0;
            padding: 0.5rem;
        }

            .hamburger-btn i {
                font-size: 1.5rem;
                color: #000;
            }

        /* Main content always takes full width */
        .main {
            width: 100%;
            transition: all 0.35s ease-in-out;
            padding-left: 15px !important;
        }

        /* Optional overlay effect */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1050;
            display: none;
        }

            .sidebar-overlay.active {
                display: block;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Hamburger button outside sidebar -->
        <button class="hamburger-btn" type="button" id="hamburgerBtn">
            <i class="lni lni-menu"></i>
        </button>

        <!-- Overlay background -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <aside id="sidebar">
            @* TITULO DE SIDEBAR *@
            <div class="d-flex">
                @* Boton de Menú *@
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                @* Nombre *@
                <div class="sidebar-logo">
                    <a href="@Url.Action("Index", "Home")">Buenísimo</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                @* Sucursal *@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-network"></i>
                        <span>Sucursales</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Sucursal A</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Sucursal B</a>
                        </li>
                    </ul>
                </li>

                @* Gestion*@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#Gestion" aria-expanded="false" aria-controls="Gestion">
                        <i class="lni lni-protection"></i>
                        <span>Gestion</span>
                    </a>
                    <ul id="Gestion" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionEmpleados")" class="sidebar-link">Cuentas</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionInventario")" class="sidebar-link">Inventario</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "GestionCarta")" class="sidebar-link">Carta</a>
                        </li>
                    </ul>
                </li>

                @* Generar Reportes *@
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#inventarioMenu" aria-expanded="false" aria-controls="inventarioMenu">
                        <i class="lni lni-protection"></i>
                        <span>Generar Reportes</span>
                    </a>
                    <ul id="inventarioMenu" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteInventario", "Reportes")" class="sidebar-link">Inventario</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteEmpleado", "Reportes")" class="sidebar-link">Empleados</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("ReporteVentas", "Reportes")" class="sidebar-link">Ventas</a>
                        </li>
                    </ul>
                </li>

                @* Pedidos *@
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Pedidos")" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Pedidos</span>
                    </a>
                </li>

                @* Visualizar carta virtual *@
                <li class="sidebar-item">
                    <a href="@Url.Action("CartaUsuario", "GestionCarta")" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Visualizar carta</span>
                    </a>
                </li>
                @* Notas *@
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "GestionarNotas")" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Gestionar Notas</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                @* Botón de Logout *@
                <a href="@Url.Action("Logout", "Autenticacion")" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            <div class="text-center container">
                <h1>
                    @RenderBody()
                </h1>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/source/js/script.js"></script>
    <script src="~/source/js/pedidos.js"></script>

    <script>
        // Custom JavaScript for hamburger menu
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const hamburgerBtn = document.getElementById('hamburgerBtn');
            const overlay = document.getElementById('sidebarOverlay');

            // Toggle sidebar when hamburger is clicked
            hamburgerBtn.addEventListener('click', function () {
                sidebar.classList.toggle('expand');
                overlay.classList.toggle('active');

                // Change hamburger icon
                const icon = hamburgerBtn.querySelector('i');
                if (sidebar.classList.contains('expand')) {
                    icon.classList.remove('lni-menu');
                    icon.classList.add('lni-close');
                } else {
                    icon.classList.remove('lni-close');
                    icon.classList.add('lni-menu');
                }
            });

            // Close sidebar when clicking on overlay
            overlay.addEventListener('click', function () {
                sidebar.classList.remove('expand');
                overlay.classList.remove('active');
                const icon = hamburgerBtn.querySelector('i');
                icon.classList.remove('lni-close');
                icon.classList.add('lni-menu');
            });

            // For toggling dropdown when sidebar is expanded
            const toggleBtn = document.querySelector('.toggle-btn');
            toggleBtn.addEventListener('click', function () {
                sidebar.classList.toggle('expand');
            });
        });
    </script>
</body>
</html>