@{
    ViewBag.Title = "Panel de Administración - Cafetería";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <title>Panel de Administración - Cafetería</title>
    <link rel="stylesheet" href="~/source/css/GestionEmpleado.css">
</head>

<body>
    <div class="container-fluid py-2">
        <!-- Header con logo de cafetería -->
        <div class="coffee-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-mug-hot fa-lg me-2 coffee-icon d-none d-sm-block"></i>
                    <i class="fas fa-mug-hot coffee-icon d-sm-none"></i>
                    <div>
                        <h1 class="h5 mb-0">Buenísimo></h1>
                        <p class="mb-0 small">Panel de Administración</p>
                    </div>
                </div>
                <div>
                    <button class="btn btn-sm btn-light" id="refreshData" style="font-size: 0.7rem;">
                        <i class="fas fa-sync-alt me-1 d-none d-sm-inline"></i> Actualizar
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Tarjetas de estadísticas -->
        <div class="row mb-3">
            <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                <div class="card stat-card primary">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs text-uppercase mb-1 text-secondary">Total Empleados</div>
                                <div class="h5 mb-0 font-weight-bold">12</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users stat-icon" style="color: var(--primary-color);"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                <div class="card stat-card success">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs text-uppercase mb-1 text-secondary">Empleados Activos</div>
                                <div class="h5 mb-0 font-weight-bold">10</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-check stat-icon" style="color: var(--success-color);"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                <div class="card stat-card" style="border-left-color: var(--danger-color);">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs text-uppercase mb-1 text-secondary">Empleados Inactivos</div>
                                <div class="h5 mb-0 font-weight-bold">2</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-slash stat-icon" style="color: var(--danger-color);"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Formulario para crear nuevo empleado -->
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, var(--primary-color) 0%, #5D4037 100%) !important;">
                <h5 class="mb-0 fs-6" style="font-size: 0.8rem !important;">
                    <i class="fas fa-user-plus me-2"></i>Agregar Nuevo Empleado
                </h5>
                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#newEmployeeForm" aria-expanded="false" aria-controls="newEmployeeForm" style="font-size: 0.7rem;">
                    <i class="fas fa-chevron-down"></i>
                </button>
            </div>
            <div class="collapse show" id="newEmployeeForm">
                <div class="card-body">
                    <form method="post" action="#" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label for="newName" class="form-label">Nombre Completo</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control form-control-sm" id="newName" name="FullName" placeholder="Ingrese nombre completo" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un nombre válido.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="newUsername" class="form-label">Nombre de Usuario</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-id-badge"></i>
                                    </span>
                                    <input type="text" class="form-control form-control-sm" id="newUsername" name="Username" placeholder="Ingrese nombre de usuario" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un nombre de usuario válido.
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label for="newEmail" class="form-label">Correo Electrónico</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control form-control-sm" id="newEmail" name="Email" placeholder="Ingrese correo electrónico" required>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un correo electrónico válido.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="newPhone" class="form-label">Teléfono</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    <input type="tel" class="form-control form-control-sm" id="newPhone" name="Phone" placeholder="Ingrese número telefónico">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label for="newPassword" class="form-label">Contraseña</label>
                                <div class="input-group input-group-sm password-wrapper">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control form-control-sm" id="newPassword" name="Password" placeholder="Ingrese contraseña" required>
                                    <span class="password-toggle" onclick="togglePassword('newPassword')">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                    <div class="invalid-feedback">
                                        Por favor ingrese una contraseña.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="employeeRole" class="form-label">Puesto</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-user-tag"></i>
                                    </span>
                                    <select class="form-select form-select-sm" id="employeeRole" name="Role" required>
                                        <option value="" selected disabled>Seleccionar puesto</option>
                                        <option value="barista">Barista</option>
                                        <option value="camarero">Camarero/a</option>
                                        <option value="cajero">Cajero/a</option>
                                        <option value="chef">Chef/Cocinero</option>
                                        <option value="gerente">Gerente</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor seleccione un puesto.
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="sendCredentials" name="sendCredentials" checked>
                            <label class="form-check-label" for="sendCredentials">
                                Enviar credenciales por correo electrónico
                            </label>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-sm btn-light me-2" style="font-size: 0.7rem;">
                                <i class="fas fa-undo me-1"></i> Limpiar
                            </button>
                            <button type="submit" class="btn btn-sm btn-primary" style="font-size: 0.7rem;">
                                <i class="fas fa-user-plus me-1"></i> Crear Empleado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Lista de empleados -->
